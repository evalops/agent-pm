{
  "dashboard": {
    "title": "Agent PM Planner Metrics",
    "tags": ["agent-pm", "planner", "openai"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Planner Request Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(planner_requests_total[5m])",
            "legendFormat": "Requests/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Planner Duration (p50, p95, p99)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(planner_duration_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(planner_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(planner_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Guardrail Rejections by Reason",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(planner_guardrail_rejections_total[5m])",
            "legendFormat": "{{reason}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Rejections/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Critic-Driven Revisions",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(planner_revisions_total[5m])",
            "legendFormat": "Revisions/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Revisions/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Tool Invocations by Result",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(tool_invocations_total[5m])",
            "legendFormat": "{{tool}}-{{result}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Invocations/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Planner Success Rate",
        "type": "singlestat",
        "gridPos": {"x": 12, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "(planner_requests_total - sum(planner_guardrail_rejections_total)) / planner_requests_total",
            "refId": "A"
          }
        ],
        "format": "percentunit",
        "valueName": "current"
      },
      {
        "id": 7,
        "title": "Total Planner Requests",
        "type": "singlestat",
        "gridPos": {"x": 18, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "planner_requests_total",
            "refId": "A"
          }
        ],
        "format": "none",
        "valueName": "current"
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
